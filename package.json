{
  "name": "routevn-creator-client",
  "description": "A visual novel engine and creator tool for building interactive narrative games with branching storylines, character dialogues, and multimedia support",
  "homepage": "https://routevn.com/creator/about/",
  "keywords": [
    "game-engine",
    "visual-novel",
    "visual-novel-games",
    "visual-novel-engine",
    "interactive-fiction-engine",
    "visual-novel-maker",
    "visual-novel-framework",
    "visual-novel-editor",
    "visual-novel-tools",
    "visual-novel-creator"
  ],
  "imports": {
    "#domain-structure": "./src/deps/infra/domainStructure/index.js"
  },
  "type": "module",
  "dependencies": {
    "@rettangoli/fe": "1.0.0-rc3",
    "@rettangoli/ui": "1.0.0-rc16",
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-dialog": "2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.2",
    "@tauri-apps/plugin-opener": "~2",
    "@tauri-apps/plugin-process": "^2.3.0",
    "@tauri-apps/plugin-sql": "~2",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "esbuild": "^0.25.11",
    "file-type": "^21.0.0",
    "immer": "^10.1.1",
    "insieme": "1.0.1",
    "jempl": "1.0.0",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "jszip": "^3.10.1",
    "nanoid": "^5.1.5",
    "route-engine-js": "0.1.35",
    "route-graphics": "0.0.31",
    "rxjs": "^7.8.2",
    "snabbdom": "^3.6.2",
    "snabbdom-to-html": "^7.1.0",
    "vite": "^6.3.5"
  },
  "scripts": {
    "build:web": "./scripts/build.sh web",
    "build:tauri": "./scripts/build.sh tauri",
    "watch:web": "rtgl fe watch -s src/setup.web.js",
    "watch:tauri": "rtgl fe watch -s src/setup.tauri.js",
    "test:v2-smoke": "node scripts/test-v2-smoke.js",
    "test:v2-convergence": "node scripts/test-v2-convergence.js",
    "test:v2-integration": "node scripts/test-v2-integration.js",
    "test:v2-append-bridge": "node scripts/test-v2-append-bridge.js",
    "vt:generate": "bun run build:web && bash -lc 'IMAGE=\"han4wluc/rtgl:playwright-v1.57.0-rtgl-v1.0.0-rc13\"; docker pull \"$IMAGE\" >/dev/null 2>&1 || IMAGE=\"han4wluc/rtgl:playwright-v1.57.0-rtgl-v1.0.0-rc12\"; docker run --rm --user $(id -u):$(id -g) -v \"$PWD:/app\" -w /app \"$IMAGE\" rtgl vt screenshot'",
    "vt:docker": "bun run vt:generate",
    "vt:report": "bun run vt:generate && rtgl vt report",
    "vt:accept": "rtgl vt accept",
    "vt:serve": "bunx serve .rettangoli/vt/_site -p 3002",
    "serve": "bunx serve _site -p 3001",
    "lint": "oxlint && bun prettier --check src",
    "lint:fix": "oxlint && bun prettier --check --write src",
    "prepare": "husky",
    "tauri": "tauri",
    "tauri:dev:win": "tauri dev --target x86_64-pc-windows-gnu",
    "tauri:build": "bun run build:tauri && tauri build --config src-tauri/tauri.prod.conf.json",
    "tauri:build:win": "bun run build:tauri && tauri build --config src-tauri/tauri.prod.conf.json --runner cargo-xwin --target x86_64-pc-windows-msvc",
    "tauri:build:mac": "bun run build:tauri && tauri build --config src-tauri/tauri.prod.conf.json --bundles dmg"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.8.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.19.0",
    "prettier": "3.6.2",
    "rtgl": "1.0.0-rc15"
  },
  "lint-staged": {
    "src/**/*.{js}": [
      "oxlint && bun prettier --write"
    ]
  }
}
