{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "RouteVN Creator",
  "version": "0.12.0",
  "identifier": "com.routevn.creator",
  "build": {
    "frontendDist": "../_site",
    "devUrl": "http://localhost:3001",
    "runner": "cargo"
  },
  "app": {
    "windows": [
      {
        "title": "RouteVN Creator",
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": {
        "default-src": [
          "'self'",
          "'unsafe-eval'",
          "ipc:",
          "http://ipc.localhost"
        ],
        "connect-src": [
          "'self'",
          "ipc:",
          "http://ipc.localhost",
          "blob:",
          "http://asset.localhost"
        ],
        "style-src": [
          "'self'",
          "'unsafe-inline'"
        ],
        "img-src": [
          "'self'",
          "asset:",
          "http://asset.localhost",
          "data:",
          "blob:"
        ],
        "media-src": [
          "'self'",
          "asset:",
          "http://asset.localhost",
          "blob:"
        ],
        "font-src": [
          "'self'",
          "asset:",
          "http://asset.localhost",
          "blob:"
        ],
        "script-src": [
          "'self'",
          "'unsafe-eval'",
          "'wasm-unsafe-eval'"
        ]
      },
      "dangerousDisableAssetCspModification": false,
      "devCsp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**/test-permissions.html"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "licenseFile": "assets/LICENSE.txt",
    "macOS": {
      "dmg": {
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        }
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM4ODJGRjUyRTg5NDBFRDcKUldUWERwVG9VditDT0gyQTNEWmV3Q0RqUElnUW54aGs0NDhGNGdtL0JvZW00SEdZeDh5ZFl4UnkK",
      "endpoints": [
        "http://localhost:3333/check/{{target}}/{{arch}}/{{current_version}}"
      ],
      "windows": {
        "installMode": "passive"
      },
      "dangerousInsecureTransportProtocol": true
    }
  }
}
