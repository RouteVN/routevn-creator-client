{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "RouteVN Creator",
  "version": "0.2.0",
  "identifier": "com.routevn.creator",
  "build": {
    "frontendDist": "../_site",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "bun run watch:tauri",
    "beforeBuildCommand": "bun run build:tauri",
    "runner": "cargo"
  },
  "app": {
    "windows": [
      {
        "title": "RouteVN Creator",
        "width": 1600,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; connect-src 'self' ipc: http://ipc.localhost; style-src 'self' 'unsafe-inline'; img-src 'self' asset: http://asset.localhost data:; media-src 'self' asset: http://asset.localhost; font-src 'self' asset: http://asset.localhost",
      "dangerousDisableAssetCspModification": false,
      "devCsp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": "v1Compatible"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlDRjJDOEUyNEY4OEZFQjYKUldTMi9vaFA0c2p5bkNadWk5NGNpbkhEQ1d0cnIwRHV3RFhCSDB2cE5XNU1YbCszeVdzTDBUNVoK",
      "endpoints": [
        "http://localhost:3333/check/{{target}}/{{arch}}/{{current_version}}"
      ],
      "windows": {
        "installMode": "passive"
      },
      "dangerousInsecureTransportProtocol": true
    }
  }
}
